<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/course_student_lstv_background" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lstv_item_selector"
        android:paddingBottom="8.0dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="64.0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2.0dip" >

            <RelativeLayout
                android:id="@+id/classmate_item_rlyt_studentName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/classmate_item_llyt_social"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12.0dip" >
                </LinearLayout>

                <TextView
                    android:id="@+id/classmate_item_txv_studentName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@id/classmate_item_llyt_social"
                    android:singleLine="true"
                    android:textColor="@color/deep_grey"
                    android:textSize="14.0sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/classmate_item_txv_studentNum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:singleLine="true"
                android:textColor="@color/lightest_grey"
                android:textSize="12.0sp" />

            <LinearLayout
                android:id="@+id/classmate_item_llyt_class_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/classmate_item_txv_studentNum"
                android:layout_below="@id/classmate_item_rlyt_studentName"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/classmate_item_imgv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8.0dip"
                    android:src="@drawable/ic_sex_girl" />

                <TextView
                    android:id="@+id/classmate_item_txv_classInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:textSize="12.0sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>